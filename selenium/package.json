{
  "scripts": {
    "build": "npm run build:wdio",
    "build:wdio": "npm run build --prefix webdriverio",
    "ci": "npm run ci:wdio && npm run ci:mocha",
    "ci:wdio": "npm ci --prefix webdriverio",
    "ci:mocha": "npm ci --prefix mocha",
    "install": "npm run install:wdio && npm run install:mocha",
    "install:wdio": "npm install --prefix webdriverio",
    "install:mocha": "npm install --prefix mocha",
    "test": "npm run test:wdio && npm run test:mocha",
    "test:wdio": "npm test --prefix webdriverio",
    "test:mocha": "npm test --prefix mocha",
    "test:mocha:reporting": "npm run test:reporting --prefix mocha",
    "test:lint": "npm run test:lint:wdio && npm run test:lint:mocha",
    "test:lint:wdio": "npm run test:lint --prefix webdriverio",
    "test:lint:mocha": "npm run test:lint --prefix mocha"
  }
}