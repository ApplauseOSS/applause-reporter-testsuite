{
  "extends": "@tsconfig/node20/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "Node16",
      "sourceMap": true,
    },
    "include": [
      "test/**/*"
    ]
  },
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "strictNullChecks": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    // "noUncheckedIndexedAccess": true,  
    "noPropertyAccessFromIndexSignature": true, 
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "resolveJsonModule": true,
    "types": [ "node", "jest", "@jest/globals", "./node_modules/jest-applause-reporter/@types/global.d.ts"]
  },
  "include": [
    "@types/**/*",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
